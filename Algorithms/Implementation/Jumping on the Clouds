#include <map>
#include <set>
#include <list>
#include <cmath>
#include <ctime>
#include <deque>
#include <queue>
#include <stack>
#include <string>
#include <bitset>
#include <cstdio>
#include <limits>
#include <vector>
#include <climits>
#include <cstring>
#include <cstdlib>
#include <fstream>
#include <numeric>
#include <sstream>
#include <iostream>
#include <algorithm>
#include <unordered_map>

using namespace std;


int main(){
    int n;
    int count = 0;
    int state = 0;
    cin >> n;
    vector<int> c(n);
    for(int c_i = 0;c_i < n;c_i++){
       cin >> c[c_i];
    }
    if (n < 3){
        count++;
    }
    else{
        while (state != n-1){
            if (c[state + 2] == 0){
                state = state + 2;
                count++;
            }
            else{
                state = state + 1;
                count++;
            }
        }
    }
    cout << count;
    return 0;
}
